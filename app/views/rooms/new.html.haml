.row
  .span4
    %h2 Create new room
    %p Create new room to chat with your friends
  .span12
    = form_for(@room) do |f|
      %fieldset
        %legend Create new room
        .clearfix
          = f.label :name
          .input
            = f.text_field :name
        .clearfix
          = f.label :title
          .input
            = f.text_field :title
        .clearfix
          = f.label :description
          .input
            = f.text_field :description
        / /clearfix
        .actions
          = f.submit "Create", :class => "btn primary"

