.row
  .span4
    %h3 Cancel my account
    %p
      Unhappy? #{link_to "Cancel account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
  .span12
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :method => :put, :multipart => true }) do |f|
      = devise_error_messages!
      %fieldset
        %legend Edit your profile
        .clearfix
          = f.label :avatar
          = image_tag @user.avatar.url if @user.avatar.present?
          .input
            = f.file_field :avatar
        .clearfix
          = f.label :username
          .input
            = f.text_field :username
        .clearfix
          = f.label :email
          .input
            = f.email_field :email
        .clearfix
          = f.label :first_name
          .input
            = f.text_field :first_name
        .clearfix
          = f.label :last_name
          .input
            = f.text_field :last_name
        .clearfix
          = f.label :password
          .input
            = f.password_field :password
        .clearfix
          = f.label :password_confirmation
          .input
            = f.password_field :password_confirmation
        .clearfix
          = f.label :current_password
          .input
            = f.password_field :current_password

        / /clearfix
        .actions
          = f.submit "Update your account", :class => "btn primary"
