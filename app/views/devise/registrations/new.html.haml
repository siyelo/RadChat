.row
  .span4
    %p= render :partial => "devise/shared/links"
  .span12
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %fieldset
        %legend Register to RadChat
        .clearfix
          = f.label :username
          .input
            = f.text_field :username
        .clearfix
          = f.label :email
          .input
            = f.email_field :email
        .clearfix
          = f.label :first_name
          .input
            = f.text_field :first_name
        .clearfix
          = f.label :last_name
          .input
            = f.text_field :last_name
        .clearfix
          = f.label :user_company
          .input
            = f.text_field :user_company
        .clearfix
          = f.label :password
          .input
            = f.password_field :password
        .clearfix
          = f.label :password_confirmation
          .input
            = f.password_field :password_confirmation

        / /clearfix
        .actions
          = f.submit "Sign up", :class => "btn primary"
