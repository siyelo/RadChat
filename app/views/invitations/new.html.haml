.row
  .span4
    %h2 Invite a new user to your RadChat account
  .span12
    = form_for(@invitation) do |f|
      %fieldset
        %legend The person you invite will receive an email with an invitation link. When they click the link they can choose their own username and password. Then they will be part of your account!
        .clearfix
          = f.label :first_name
          .input
            = f.text_field :first_name
        .clearfix
          = f.label :last_name
          .input
            = f.text_field :last_name
        .clearfix
          = f.label :email
          .input
            = f.email_field :email
        .clearfix
          = f.label :message
          .input
            = f.text_area :message

        / /clearfix
        .actions
          = f.submit "Send the invitation email", :class => "btn primary"
          \&nbsp;
          %button.btn{:type => "reset"} Cancel
