.topbar{"data-scrollspy" => "scrollspy"}
  .topbar-inner
    .container
      = link_to "RadChat", root_path, :class => 'brand'
      - if current_user
        %ul.nav
          - current_user.companies.each do |company|
            %li
              = link_to company.name

      .pull-right
        %ul.nav
          - if user_signed_in?
            %li= link_to_if current_user.current_company_id, "Lobby", company_path(current_user.current_company)
            %li= link_to "Users", company_users_path(current_user.current_company)
            %li= link_to "Profile", edit_user_registration_path
            %li= link_to "Settings", edit_company_path(current_user.current_company)
            %li= link_to "Sign out", destroy_user_session_path, :method => :delete
          - else
            %li{:class => (params[:controller] == "devise/sessions" && ['new', 'create'].include?(params[:action]) ? 'active' : nil)}= link_to "Sign in", user_session_path
            %li{:class => (params[:controller] == "devise/registrations" && ['new', 'create'].include?(params[:action]) ? 'active' : nil)}= link_to "Register", new_user_registration_path

